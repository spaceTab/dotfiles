#!/bin/zsh

# Navigation
alias scr='~/Programming/shell-scripts'
alias pro='~/Programming'
alias pics='~/Pictures'
alias dls='~/Downloads'
alias doc='~/Documents'
alias music='~/Music'
alias dots='~/dotfiles'
# Basic commands
alias cb='cd ..'
alias nv='nvim'
alias pac='sudo pacman'
alias chx='chmod +x'
alias ch755='chmod +755'
alias rmr='sudo rm -r'
alias mkd='mkdir -v'
alias mkf='touch'
alias back='cd -'
alias .conf='~/.config/'
alias lshare='~/.local/share/'
alias cp="cp -ivr"
# Scripts // Apps
alias rl='~/Applications ; ./RuneLite.AppImage &;
	disown ./RuneLite; back ; exit'
alias convert='~/Programming/shell-scripts/convertRename.sh'

#global NPM Server
alias server='browser-sync start --server --files'

# Download web-page contents in non-html format
alias sitedl='w3m -dump'

# Commands to quickly access doom(emacs) scripts
alias doomsync='cd ~/.emacs.d/bin/ &&
	  ./doom sync ; back'
alias doomupg='cd ~/.emacs.d/bin/ &&
	  ./doom upgrade ; back'
alias doomdoctor='cd ~/.emacs.d/bin &&
			./doom doctor ; back'
# built-in to pwd on cd change
chpwd() ls

~/Programming/shell-scripts/termstart.sh
